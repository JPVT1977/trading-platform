# ===========================================
# Trading Bot Configuration
# ===========================================

# Mode: dev (no exchange calls), paper (testnet), live (real money)
TRADING_MODE=paper

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================================
# Exchange (CCXT)
# ===========================================
EXCHANGE_ID=bybit
EXCHANGE_API_KEY=your-api-key
EXCHANGE_API_SECRET=your-api-secret
EXCHANGE_SANDBOX=true

# Symbols and timeframes (JSON arrays)
SYMBOLS=["BTC/USDT","ETH/USDT"]
TIMEFRAMES=["1h","4h"]

# ===========================================
# Claude API
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250514
CLAUDE_MAX_TOKENS=1024

# ===========================================
# Database (asyncpg)
# ===========================================
DATABASE_URL=postgresql://trading:password@localhost:5432/trading_bot

# ===========================================
# Telegram Alerts (optional â€” leave empty to disable)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================================
# Risk Management
# ===========================================
MAX_POSITION_PCT=2.0
MAX_DAILY_LOSS_PCT=5.0
MAX_OPEN_POSITIONS=3
MAX_CORRELATION_EXPOSURE=2
MIN_RISK_REWARD=1.5
MIN_CONFIDENCE=0.6

# ===========================================
# Scheduling
# ===========================================
ANALYSIS_INTERVAL_MINUTES=15
HEALTH_CHECK_PORT=8080
